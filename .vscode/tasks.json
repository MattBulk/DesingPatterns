{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "DesingPattern",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"${workspaceFolder}/*.cpp", "${workspaceFolder}/*/*.cpp",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}